#products
  .wrapper
    %h1.title= I18n.t('titles.products')

    %ul.clearfix
      - %w(autotrack_xl_gyro autotrack_lite garmin_dezl_760LMT_7_inch).each do |item|
        %li.clearfix
          %aside
            = image_tag "products/#{item}.png"
          %article
            %h3= I18n.t("products.titles.#{item}")
            %p= I18n.t("products.slogans.#{item}")
