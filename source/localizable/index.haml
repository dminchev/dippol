#how-it-works
  .wrapper
    %h1.title= I18n.t('titles.how_it_works')

    %ul.clearfix
      %li
        %span.arrow
        %header
          = image_tag 'steps/clipboard.svg'
        %h2
          1.
          = I18n.t('how_it_works.step_consultation_title')
        %article
          %p= I18n.t('how_it_works.step_consultation_desc')
      %li
        %span.arrow
        %header
          = image_tag 'steps/truck.svg'
        %h2
          2.
          = I18n.t('how_it_works.step_installation_title')
        %article
          %p= I18n.t('how_it_works.step_installation_desc')
      %li.upload
        %span.arrow
        %header
          = image_tag 'steps/upload.svg'
        %h2
          3.
          = I18n.t('how_it_works.step_sync_title')
        %article
          %p= I18n.t('how_it_works.step_sync_desc')
      %li
        %header
          = image_tag 'steps/map.svg'
        %h2
          4.
          = I18n.t('how_it_works.step_manage_title')
        %article
          %p= I18n.t('how_it_works.step_manage_desc')

#services
  .wrapper
    %h1.title= I18n.t('titles.services')

    %ul.services
      %li
        %span Active system Lite
      %li
        %span Active system XL

    %h1.title= I18n.t('titles.benefits')

    %ul.benefits.clearfix
      - I18n.t('services.labels').each do |item|
        %li
          %h2= item

    - if false
      %ul.features.clearfix
        %li
          %h2= I18n.t('services.labels.basic')
          %ul.list
            - I18n.t('services.features.basic').each do |item|
              %li= item

        %li
          %h2= I18n.t('services.labels.extended')
          %ul.list
            - I18n.t('services.features.extended').each do |item|
              %li= item
        %li
          %h2 Add-ons
          %ul.list
            %li Item 1
            %li Item 2
            %li Item 3
            %li Item 4

#products
  .wrapper
    %h1.title= I18n.t('titles.products')

    %ul.clearfix
      - %w(autotrack-xl-gyro autotrack-lite garmin-dezl-760LMT-7-inch super-trackstick-gps-tracking-device).each do |item|
        %li.clearfix
          %aside
            = link_to "products/#{item}.html" do
              = image_tag "products/#{item}-square.png"
          %article
            %h3= I18n.t("products.titles.#{item.gsub('-', '_')}")
            %p= I18n.t("products.slogans.#{item.gsub('-', '_')}")
            = link_to I18n.t('actions.read_more'), "products/#{item}.html", id: "product-#{item}-link", class: 'read-more'
