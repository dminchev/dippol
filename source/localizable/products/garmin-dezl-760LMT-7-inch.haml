- name = 'garmin_dezl_760LMT_7_inch'
- @page_title = I18n.t("meta.titles.#{name}")
#product-garmin-dezl-760LMT-7-inch.product-view
  .wrapper
    %h1.title= I18n.t("products.titles.#{name}")
    %aside.sidebar
      = image_tag "products/#{name.gsub('_', '-')}-square.png"
      = link_to I18n.t('actions.order_now'), "/#contact-us", class: 'order-now'
    %article.products-details.clearfix
      %p= I18n.t("products.details.#{name}.p1")
      %p= I18n.t("products.details.#{name}.p2")
      %p= I18n.t("products.details.#{name}.p3")
      %p= I18n.t("products.details.#{name}.p4")

    - if false
      %h2.title= I18n.t('titles.product_features')
      %ul.features.clearfix
        - I18n.t("products.details.#{name}.features").each do |feature|
          %li
            %span +
            = feature

      %h2.title= I18n.t('titles.technical_spec')
      .tech.clearfix
        - arr = I18n.t("products.details.#{name}.tech")
        - left,right = arr.each_slice( (arr.size/2.0).round ).to_a
        %article
          - left.each do |item|
            %h4= item['name']
            = item['options'].join '<br>'
        %article
          - right.each do |item|
            %h4= item['name']
            = item['options'].join '<br>'